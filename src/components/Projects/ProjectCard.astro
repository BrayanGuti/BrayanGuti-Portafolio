<style>
  .project-card {
    display: flex;
    gap: 1rem;
  }

  .project-image-section {
    width: 1500px;
    height: 300px;
    perspective: 1000px;
  }

  .image-container {
    margin: 0;
    width: 100%;
    height: 100%;
    border-radius: 12px;
    box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.3);
    transition: transform 0.6s, box-shadow 0.6s;
    transform-style: preserve-3d;
  }

  .image-container img {
    width: 100%;
    height: 100%;
    border-radius: 12px;
    object-fit: cover;
    object-position: center;
    backface-visibility: hidden;
  }

  h3{
    font-size: 1.5rem;
    margin: 0;
    color: var(--azul-claro);
  }

  p{
    color: #b3a9d6;
  }
  .project-technologies {
    display: flex;
    gap: 0.5rem;
    padding: 0;
  }

  .tech {
    list-style: none;
    padding: 0 1rem;
    border-radius: 9px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 0 0.5rem;
  }


  .Rea {
     color: #53C1DE;
     background-color: #FFF;
  }

  .project-image-section:hover .image-container {
    box-shadow: 0px 10px 30px rgba(0, 0, 0, 1);
    transform: rotateX(10deg);
  }

  .project-links {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
  }

  .project-link {
    display: flex;
    width: min-content;
    justify-content: center;
    align-items: center;
    background-color: var(--buttons-color);
    border: 1px solid #858686;
    padding: 5px 10px;
    text-decoration: none;
    color: var(--text-color);
    border-radius: 9px; 
    transition: background-color 0.3s, color 0.3s;
  }

  .project-link:hover {
    background-color: var(--text-color);
    color: var(--bg-color);
  }

  .project-link span {
    margin-left: 5px;
    text-transform: uppercase;
  }

  .stroke-1,
  .stroke-2 {
    stroke: var(--text-color);
    transition: stroke 0.3s;
  }

  .icon-github .path-main {
    transition: stroke 0.3s;
    stroke: var(--text-color);
  }

  .icon-github .path-bg {
    stroke: none;
  }

  .project-link:hover .stroke-1,
  .project-link:hover .stroke-2,
  .project-link:hover .icon-github .path-main {
    stroke: var(--bg-color);
  }

  svg {
    width: 25px;
    height: 25px;
  }
</style>
