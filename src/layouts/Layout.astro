<style>
  html {
    box-sizing: border-box;
  }
  *,
  *:before,
  *:after {
    box-sizing: inherit;
  }

  html,
  body {
    font-family: "IBM Plex Sans", serif;
    margin: 0;
    width: 100%;
    height: 100%;
  }

  :root {
    --bg-color: rgb(212, 201, 201);
    --text-color: #0e0d0d;

    --verde-auxiliar: #2d50b1;
    --amarillo-auxiliar: #EC4E20;
    --buttons-color: rgba(255, 255, 255, 0.6);

    --circle-color: rgb(255, 255, 255);
    --circle-color2: rgb(255, 255, 255);
    --circle-color3: rgb(255, 255, 255);
  }

  [data-theme="dark"] {
		--bg-color: #020a19; 
    --text-color: #EAE8FF;

    --verde-auxiliar: #1DD3B0;
    --amarillo-auxiliar: #FFF07C;
    --azul-claro: #2b9ce2;
    --buttons-color: rgba(43, 48, 54, 0.5);

    --circle-color: rgba(45, 57, 216, 0.719);
    --circle-color2: rgba(10, 35, 67, 0.6);
    --circle-color3: rgba(0, 0, 0, 0.9);

	}


  .cursor-circle {
	  position: fixed;
	  width: 350px;
	  height: 350px;
	  border-radius: 50%;
	  pointer-events: none;
	  transform: translate(-50%, -50%);
	  z-index: -1;
	  mix-blend-mode: screen;
	  transition: transform 0.05s ease;
	  opacity: 0.7;
	  filter: blur(12px);
	  background: radial-gradient(
	    circle,
	    var(--circle-color) 0%,
	    var(--circle-color2) 25%,
	    var(--circle-color3) 35%,
	    var(--circle-color2) 50%,
	    var(--circle-color3) 60%,
	    var(--circle-color2) 75%,
	    var(--circle-color3) 85%,
	    transparent 100%
	  );
	}

	[data-theme="light"] .cursor-circle {
	  display: none;
}

[data-theme="dark"] body {
  background-color: var(--bg-color);
  color: var(--text-color);

  /* ✅ Gradientes continuos que cubren toda la altura */
  background-image:
    radial-gradient(
      ellipse at 50% 20%,
      rgba(10, 60, 90, 0.7) 0%,
      rgba(4, 40, 60, 0.8) 40%,
      rgba(0, 25, 45, 1) 100%
    ),
    radial-gradient(
      circle at 70% 80%,
      rgba(0, 150, 180, 0.08),
      transparent 60%
    );

  /* ✅ Asegura que cada capa se repita bien */
  background-repeat: repeat;
  background-attachment: fixed; /* fija el fondo para evitar "saltos" */
  background-size: 100% auto; /* clave: permite que el alto fluya natural */
  background-blend-mode: overlay, soft-light, normal;

  position: relative;
  z-index: 0;
}

[data-theme="dark"] body::before {
  content: "";
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: -2;
  pointer-events: none;

  background-image: repeating-radial-gradient(
    circle at 40% 60%,
    rgba(0, 180, 255, 0.04) 0px,
    rgba(0, 180, 255, 0.06) 4px,
    transparent 8px,
    transparent 14px
  );

  background-repeat: repeat;
  background-size: 100% auto; /* importante para evitar "bloques" */
  filter: blur(8px);
  opacity: 0.6;
  animation: spiralDrift 2s ease-in-out infinite alternate;
}

@keyframes underwaterMotion {
  0% {
    background-position: 0 0;
  }
  100% {
    background-position: 20px 50px;
  }
}

@keyframes spiralDrift {
  0% {
    background-position: 0 0;
  }
  100% {
    background-position: 40px 60px;
  }
}

</style>
